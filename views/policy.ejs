<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/global.css"> 
    <link rel="shortcut icon" href="/icons/favicon.ico">
    <link rel="stylesheet" href="/css/policy.css">
    <script src="/scripts/microsoft-clarity.js"></script>
    <script src="/scripts/cookie-banner-toggle.js"></script>
    <title>Lif Platforms | <%- title %></title>
</head>
<%- navbar %>
<header>
    <h1><%- title %></h1>
    <p><%- description %></p>
    <span id="last-updated"></span>
</header>
<!--Convert UTC last updated time to local time-->
<script>
    const lastUpdatedUTC = new Date("<%= lastUpdated %>");
    const localTimezone = Intl.DateTimeFormat().resolvedOptions().timeZone;
    const lastUpdatedLocal = lastUpdatedUTC.toLocaleString('en-US', { timeZone: localTimezone });

    document.getElementById("last-updated").innerHTML = "Last Updated: " + lastUpdatedLocal;
</script>
<!--Cookie Banner Notice-->
<div class="cookie-banner-closed" id="cookie-banner">
    <div>
        <h1>Accept Cookies?</h1>
        <p>Lif Platforms uses cookies to provide analytics data for our site.</p>
    </div>
    <button onclick="accept_cookies()">Accept</button>
</div>
<body>
    <div class="content">
        <%- document %>
    </div>
</body>
<%- footer %>
</html>