<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/ringer downloads.css"> 
    <link rel="stylesheet" href="css/global.css"> 
    <link rel="shortcut icon" href="icons/favicon.ico">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter">
    <script src="scripts/sidenav-toggle.js"></script>
    <script src="scripts/microsoft-clarity.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.5/dist/js.cookie.min.js"></script>
    <script src="scripts/cookie-banner-toggle.js"></script>
    <script src="scripts/services/ringer/fetch_download_file.js"></script>
    <title>Lif Platforms | Ringer Downloads</title>
</head>
<%- navbar %>
<!--Cookie Banner Notice-->
<div class="cookie-banner-closed" id="cookie-banner">
    <div>
        <h1>Accept Cookies?</h1>
        <p>Lif Platforms uses cookies to provide analytics data for our site.</p>
    </div>
    <button onclick="accept_cookies()">Accept</button>
</div>
<header>
    <img src="images/services/Ringer-Downloads-Header.png" alt="Ringer Beta Logo" />
    <h1>Download Ringer</h1>
    <p>Please select your platform.</p>
</header>
<script>
    function handle_download(platform) {
        // Define base URL
        const base_url = "https://github.com/Lif-Platforms/Ringer-Client-Desktop/releases/latest/download";

        // Get download file
        fetch(`/ringer/download/${platform}`)
        .then((response) => {
            if (response.ok) {
                return response.json();
            }
        })
        .then((data) => {
            window.location.href = base_url + "/" + data.download_file;
        })
        .catch((err) => {
            console.error(err);
        })
    }
</script>
<body>
    <div class="downloads">
        <div>
            <h1>Windows</h1>
            <p>Download Ringer for Windows.</p>
            <button onclick="handle_download('windows');">Download</button>
        </div>
        <div>
            <h1>Mac OS</h1>
            <p>Download Ringer for Mac OS.</p>
            <button onclick="handle_download('mac_os')">Download</button>
        </div>
        <div>
            <h1>Linux</h1>
            <p>Download Ringer for Linux.</p>
            <span>Coming Soon</span>
        </div>
    </div>
</body>
<%- footer %>
</html>