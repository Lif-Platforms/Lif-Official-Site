<script>
    function handle_download(platform) {
        // If platform is iOS, redirect to TestFlight download
        if (platform === "ios") {
            window.location.href = 'https://testflight.apple.com/join/8wu1bVxU';
            return;
        }

        // Define base URL
        const base_url = "https://github.com/Lif-Platforms/Ringer-Client-Desktop/releases/latest/download";

        // Get download file
        fetch(`/ringer/download/${platform}`)
        .then((response) => {
            if (response.ok) {
                return response.json();
            }
        })
        .then((data) => {
            window.location.href = base_url + "/" + data.download_file;
        })
        .catch((err) => {
            console.error(err);
        })
    }
</script>
